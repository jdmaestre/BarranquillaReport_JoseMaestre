<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="60sp"
    android:layout_height="60sp">

    <ImageView
        android:id="@+id/menuListImage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

    </LinearLayout>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
    
    <TextView
        android:id="@+id/menuListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:paddingTop="5sp"
        android:paddingBottom="2sp"
        android:paddingLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
        android:paddingRight="?android:attr/expandableListPreferredChildIndicatorRight">

    </TextView></RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <TextView
            android:id="@+id/menuListItemReview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="9sp"
            android:paddingTop="0sp"
            android:paddingBottom="2sp"
            android:paddingLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
            android:paddingRight="?android:attr/expandableListPreferredChildIndicatorRight">

        </TextView>


        </RelativeLayout>



    
    
    </LinearLayout>



</LinearLayout>